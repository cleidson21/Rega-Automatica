//Declaracao do modulo
module NivelErro (H, 
						M,
						L, 
						Ve, 
						Al, 
						Er, 
						Nv);

	//Declaracao de portas
	input H, M, L;
	output Ve, Al;
	output [1:0] Nv;
	inout	Er;
	
	//declaracao dos fios intermediarios
	wire NivelC, NivelB, NotErr, Critico;
	wire [1:0] w10;
	
	//funcionamento do circuito
	
	//Nivel Critico
	nor c1 (NivelC, H, M, L); //Comparando entradas de nivel
	assign NotErr = !Er; //Negando a entrada de ERRO
	and c3 (critico, NivelC, NotErr); //Caso todas entradas desligadas e sem Erro
	// Nivel Baixo
	assign NivelB = (!H) && (!M) && L;
	
	case (critico)
		 1'b1: Nv<=2'b00; //Associando Nivel com dois bits 00
		 1'b1: Al<=1; 		//Associando Valor Logico Alto ao Alarme
	endcase
	
	
	
endmodule 