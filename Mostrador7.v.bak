// Declaracao do modulo
module Mostrador7 (Nv_Critico, Nv_Baixo, Nv_Medio, Nv_Alto,  Err, Bs, Vs, Sd, SEG_D1, 
						 SEGs);  

	// Declaracao de portas
	input Nv_Critico, Nv_Baixo, Nv_Medio, Nv_Alto, Err, Bs, Vs, Sd;
	output SEG_D1; //SEG_A, SEG_B, SEG_c, SEG_D, SEG_E, SEG_F, SEG_G;
	output [6:0] SEGs;
	
	// Declaracao dos fios intermediarios
	wire wire_Mcr, wire_Mba, wire_Mme, wire_Mal, wire_Mer, wire_Mbs, wire_Mvs;
	
	//Selecionando o primeiro segmento do Mostrador de 7 segmentos 
	parameter SEG_D1 = 1; 
	
	// Funcionamento do circuito
	
	// Fios com negações das entradas
	not sd1 (Wire_nsd, Sd);	
	
	// Tratamento do tipo de Visualização
	
	// Niveis (Alto, Medio, Baixo, Critico e Erro)
	and mcrit (wire_Mcr, Wire_nsd, Nv_Critico);
	and mbai (wire_Mba, Wire_nsd, Nv_Baixo);
	and mmed (wire_Mme, Wire_nsd, Nv_Medio);
	and malt (wire_Mal, Wire_nsd, Nv_Alto);
	and merr (wire_Mer, Wire_nsd, Err);
	
	// Tipo de Rega
	and mbs (wire_Mbs, Sd, Bs);
	and mvs (wire_Mvs, Sd, Vs);
	
	// Saida para mostrador de 7 Segmentos
	always @* begin]
			//Saída M7 Nivel Critico
			case (wire_Mcr)
				1b'1:SEGs = 7'b0110110;
			endcase
			
			//Saída M7 Nivel Baixo
			case (wire_Mba)
				1b'1:SEGs = 7'b1110111;
			endcase
			
			//Saída M7 Nivel Medio
			case (wire_Mme)
				1b'1:SEGs = 7'b0110111;
			endcase
			
			//Saída M7 Nivel Alto
			case (wire_Mal)
				1b'1:SEGs = 7'b0110110;
			endcase
			
			//Saída M7 Erro
			case (wire_Mer)
				1b'1:SEGs = 7'b0000110;
			endcase
			
			//Saída M7 Bomba de Aspersão
			case (wire_Mbs)
				1b'1:SEGs = 7'b0000011;
			endcase
			
			//Saída M7 Valvula de Gotejamento
			case (wire_Mvs)
				1b'1:SEGs = 7'b1100011;
			endcase
	end
	
endmodule x